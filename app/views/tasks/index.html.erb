<h1>タスクリスト一覧</h1>


 <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>

    <% @tasks.each do |task| %>
      <tr>
      <td><%= link_to task.id, task %></td><td> <%= task.status %> </td><td> <%= task.content %></td>
      </tr>
    <% end %>
  </table>

<%= link_to "新規タスクの作成", new_task_path %>